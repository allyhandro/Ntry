<div class="content" id="new-user-content">
    <div id="title">
        <h2 class="page-header">Register New User</h2>
    </div>
    <div id="errors">
        {{#if errors}}
            {{#each errors}}
                <div class="alert alert-danger">{{msg}}</div>
            {{/each}}
        {{/if}}
    </div>
    <div id="new-user-form">
        <form method="POST" action="/users/new-user">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" placeholder="Hank Handler" name="name">
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" placeholder="lovehandles" name="username">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" placeholder="lovehandles@storageCo.com" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="*******" name="password">
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" class="form-control" placeholder="********" name="password2">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>